.left-content
  .user
    .user--left
      = current_user.name
    %ul.user--right
      %li.list
        =link_to new_group_path do
          = fa_icon 'edit', class: 'icon'
      %li.list
        =link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'

  - current_user.groups.each do |group|
    = link_to group_messages_path(group), class: 'link ' do
      .group{"data-group_id": "#{group.id}"}
        .group--name{"data-group_id": "#{group.id}"}
          = group.name
        .group--talk{"data-group_id": "#{group.id}"}
          = group.show_last_message